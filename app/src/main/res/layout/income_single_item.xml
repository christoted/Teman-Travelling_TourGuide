<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/id_iv_activity_history_single_item"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/jogja" />

        <LinearLayout
            android:id="@+id/linearLayoutVertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextTitleStyleItemHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eksplorasi ke" />

            <TextView
                android:id="@+id/tv_city"
                style="@style/TextSubtitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Yogjakarta"
                android:textColor="@color/color_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_date_and_time"
                style="@style/TextDescStyleItemHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="24 November 2020" />

            <TextView
                android:id="@+id/tv_duration"
                style="@style/TextDescStyleItemHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 days" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/TextTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp2.000.000,00"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>
        </LinearLayout>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>